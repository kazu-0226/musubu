<div class="container">
    <% @shops.each do |shop| %>
    <div class= "row">
        <div class ="col-xs-7">
            <%= attachment_image_tag shop, :main_image, class: "main_image", fallback: "no_image.svg", size:"300x300" %>
        </div>
        <div class ="col-xs-5">
            <h2><%= shop.catchcopy %></h2>
            <table>
            <tr><h3><%= shop.name %></h3></tr>
            <tr>
                地域：<%= shop.prefecture_name %>
            </tr>
            <tr>
                業種：<%= shop.category.name %>
            </tr>
            <tr><h3>お店のアピールポイント</h3></tr>
            <tr><%= shop.appeal_text  %></tr>
            </table>
        </div>
    </div>
    <% end %>
 </div>
