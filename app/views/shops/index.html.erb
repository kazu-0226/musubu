<div class="container">
    <div class= "row">
        <div class ="col-xs-8">
            <div>
                <%= form_with url:search_shops_path, local: true, method: :post do |f| %>
                    <div class="form-check">
                    <p>業種一覧</p>
                        <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |c| %>
                            <%= c.label class: 'form-check-label' do %>
                                <%= c.check_box class: 'form-check_input' %>
                                <%= c.text %>
                            <% end %>
                        <% end %>
                    </div>
               <div class ="form-content">
               <span>フリーワード</span><%= f.text_field :content %>
               </div>
               <%= f.submit "検索する" %>
               <% end %>
            </div>
        </div>
    </div>
    <% @shops.each do |shop| %>
    <div class= "row">
        <div class ="col-xs-7">
            <%= attachment_image_tag shop, :main_image, class: "main_image", fallback: "no_image.svg", size:"300x300" %>
        </div>
        <div class ="col-xs-5">
            <h2><%= shop.catchcopy %></h2>
            <table>
            <tr><h3><%= shop.name %></h3></tr>
            <tr><h3>お店のアピールポイント</h3></tr>
            <tr><%= shop.appeal_text  %></tr>
            </table>
        </div>
    </div>
    <% end %>
 </div>
