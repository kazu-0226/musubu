<%# メッセージ表示 %>
<div id="chat_messages" data-chat_room_id="<%= @room.id %>">
  <%= render 'chat_messages/chat_message', {user_messages: @user_messages, shop_messages: @shop_messages} %>
</div>

<br>

<%# メッセージ送信フォーム %>
<div class= "row">
<div class= "col-sm-10 offset-sm-1"></div>
<form class="chat-form ">
  <% if shop_signed_in? %>
     <input type="hidden" name="shop_id" id="shop-id-form" value="<%= @room.shop.id %>">
  <% elsif  %>
    <input type="hidden" name="user_id" id="user-id-form" value="<%= @room.user.id %>">
  <% end %>
  <input type="hidden" name="chat_room_id" id="chat-room-id-form"  value="<%= @room.id %>">
  <input type="text" name="content" id="content-form" data-behavior="chat_speaker">
</form>
</div>